{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "postOrderBody",
  "type": "object",
  "required": [
    "customer",
    "phones"
  ],
  "additionalProperties": false,
  "properties": {
    "customer": {
      "$id": "/properties/customer",
      "type": "object",
      "required": [
        "name",
        "surname",
        "email"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "$id": "/properties/customer/properties/name",
          "type": "string",
          "minLength": 1
        },
        "surname": {
          "$id": "/properties/customer/properties/surname",
          "type": "string",
          "minLength": 1
        },
        "email": {
          "$id": "/properties/customer/properties/email",
          "type": "string",
          "minLength": 1
        }
      }
    },
    "phones": {
      "$id": "/properties/phones",
      "type": "array",
      "minItems": 1,
      "required": [
        "items"
      ],
      "additionalProperties": false,
      "items": {
        "$id": "/properties/phones/items",
        "type": "object",
        "required": [
          "name"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "$id": "/properties/phones/items/properties/name",
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
